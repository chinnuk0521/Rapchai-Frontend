# Environment Variables
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Supabase Database
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Supabase Configuration (optional)
SUPABASE_URL="https://[PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# Redis (optional - can be disabled for development)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_ENABLED="false"

# JWT
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-at-least-32-characters-long-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Password Hashing
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=1

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# MinIO/S3 Storage
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="rapchai-uploads"

# Sentry
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# WhatsApp Integration
WHATSAPP_WEBHOOK_URL=""
WHATSAPP_API_TOKEN=""

# WebSocket
WS_CORS_ORIGIN="http://localhost:3000"

# BullMQ
QUEUE_REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="info"
LOG_PRETTY_PRINT=true
